<h3 class="mb-4 text-center">予定を編集してください</h3>
<div class="d-flex justify-content-center">
    <%= render "shared/error", obj: @user %>
</div>    

<div class="d-flex justify-content-center">

    <div class="card col-md-8 p-4 shadow" style="width: 40rem;" >

        <%= form_with model: @user do |f| %>
            <div class="mb-3">
                <%= f.label :title, "タイトル", class: "form-label" %>
                <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= f.label :start_date, "開始日", class: "form-label" %>
                <%= f.date_select :start_date, {order: [:year, :month, :day]}, {class: "form-select"} %>
            </div>

            <div class="mb-3">
                <%= f.label :end_date, "終了日", class: "form-label" %>
                <%= f.date_select :end_date, {order: [:year, :month, :day]}, {class: "form-select"} %>
            </div>

            <div class="form-check mb-3">
                <%= f.check_box :all_day, class: "form-check-input" %>
                <%= f.label :all_day, "終日", class: "form-check-label" %>  
            </div>

            <div class="mb-3">
                <%= f.label :schedule_memo, "スケジュールメモ", class: "form-label" %>
                <%= f.text_area :schedule_memo, class: "form-control", rows: 3 %>
            </div>

            <div class="d-grid">
                <%= f.submit "保存", class: "btn btn-primary btn-block" %>
            </div>
        <% end %>

        <%= link_to "キャンセル", users_path, class: "btn btn-secondary mt-3" %>
    </div>
</div>
